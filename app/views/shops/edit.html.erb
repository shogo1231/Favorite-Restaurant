<div class="row">
  <div class="col-sm-10 offset-sm-1">
    <div class="card">
      <h2 class="card-header text-center">オススメ飲食店編集ページ</h2>
        <div class="card-body">
          <%= form_for @shop do |f| %>
            <div class="form-group">
              <%= f.label :name, '店の名前' %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
      
            <div class="form-group">
              <%= f.label :picture, '店の画像' %>
              <%= f.file_field :picture, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :introduction, '店の紹介文' %>
              <%= f.text_area :introduction, class: 'form-control' %>
            </div>
      
            <div class="form-group">
              <%= f.label :time, '営業時間' %>
              <%= f.text_field :time, class: 'form-control' %>
            </div>
      
            <div class="form-group">
              <%= f.label :holiday, '定休日' %>
              <%= f.text_field :holiday, class: 'form-control' %>
            </div>
      
            <div class="form-group">
              <%= f.label :phone, '電話番号' %>
              <%= f.number_field :phone, class: 'form-control' %>
            </div>
      
            <div class="form-group">
              <%= f.label :address, '住所' %>
              <%= f.text_field :address, class: 'form-control' %>
            </div>

            <%= f.submit '投稿', class: 'btn btn-primary btn-block col-4 offset-4' %>
          <% end %>
        </div>
    </div>
  </div>
</div>