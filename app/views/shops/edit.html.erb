<div class="center jumbotron text-center">
  <h1>オススメ飲食店編集ページ</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_for @shop do |f| %>
      <div class="form-group">
        <%= f.label :name, '店の名前' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :introduction, '店の紹介文' %>
        <%= f.text_area :introduction, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :time, '営業時間' %>
        <%= f.text_field :time, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :holiday, '定休日' %>
        <%= f.text_field :holiday, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :phone, '電話番号' %>
        <%= f.number_field :phone, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :address, '住所' %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>

      <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
    <% end %>

  </div>
</div>